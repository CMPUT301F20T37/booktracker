<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/bookTracker</item>
        <item name="colorPrimaryDark">@color/bookTracker</item>
        <item name="colorAccent">@color/bookTracker</item>

    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Customize your theme here. -->
        <item name="background">@color/bookTracker</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>
    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <color name="bookTracker">#7B1313</color>
</resources>