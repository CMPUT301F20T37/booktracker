<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/requester_profile_pic"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/profile_icon"/>

    <TextView
        android:id="@+id/requester_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/requester_profile_pic"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="23dp"
        android:layout_toEndOf="@+id/requester_profile_pic"
        android:layout_toRightOf="@+id/requester_profile_pic"
        android:text="Username" />

    <Button
        android:id="@+id/request_accept_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/request_decline_btn"
        android:layout_toLeftOf="@+id/request_decline_btn"
        android:background="@android:color/holo_green_light"
        android:text="Accept" />

    <Button
        android:id="@+id/request_decline_btn"
        android:background="@android:color/holo_red_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:text="Decline"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />


</RelativeLayout>